<% if current_user.admin? %>
  <div class="nav navbar-nav pull-right">
    <%= button_to "Add Sql Functions", new_constraint_path , :class => "btn btn-primary btn-medium", :method => :get %>
  </div>
<%end%>

<% owned_projects = current_user.projects %>
<% collaborating_projects = current_user.collaborating_projects %>
<% if owned_projects.size == 0 and collaborating_projects.size== 0 %>
  <h3> Currently you are not the owner or the collaborator of any project , please add your project from the top right link</h3>
<%end%>
<% if owned_projects.any? %>
  <h1> Owned Projects </h1>
  <table class="table table-striped">

    <thead>  
      <tr>  
        <th>Name</th>  
        <th>Description</th>  
        <th>View</th>  
        <th> Drop </th>
      </tr>  
    </thead> 

    <tbody>  
      <% owned_projects.each do |own|%> 
        <tr>  
          <%= render partial: 'shared/home_table' , locals: {own: own, yes: "1"}%>
        </tr>
      <%end%>
    </tbody> 
  </table> 
<%end%>

<% if collaborating_projects.length > owned_projects.length %>

  <h1> 
    Collaborating Projects 
  </h1>
  <table class="table table-striped">
    <thead>  
      <tr>  
        <th>Name</th>  
        <th>Description</th>  
        <th>View</th>  
      </tr>  
    </thead> 

    <tbody>  
      <% collaborating_projects.each do |collaborator|%> 
        <% unless owned_projects.include? collaborator %>
          <tr>
            <%= render partial: 'shared/home_table' , locals: {own: collaborator,yes: "0"}%>
          </tr>
        <%end%>
      <%end%>      
    </tbody> 
  </table> 
<%end%>