<div class="row">
  <div class="span10 offset1">
    <h1>Add a New Project</h1>
  </div>
</div>  
<div class="row">
  <div class="span10 offset1">

    <%= form_tag( projects_path(@project) , method: "post" ) do %>

    <div class="form-group">

      <%#= f.label :project_name %>
      <%= label_tag "Project Name"  %>
      <%= text_field_tag :name%>

    </div>
    <div class="form-group">
      <%#= f.label :project_description %>
      <%= label_tag "Project Desciption"  %>
      <%= text_field_tag :description  %>
      <%#= f.text_field :description , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "Host"  %>
      <%= text_field_tag :host%>
      <%#= f.label :host_ip %>
      <%#= f.text_field :host, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "Adapter Used for the project"  %>
      <%= text_field_tag :adapter %>

      <%#= f.label :adapter_used_for_your_application %>
      <%#= f.text_field :adapter, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "Database Username"  %>
      <%= text_field_tag :dbusername%>

      <%#= f.label :database_username %>
      <%#= f.text_field :dbusername, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "Database Name"  %>
      <%= text_field_tag :dbname%>

      <%#= f.label :database_name %>
      <%#= f.text_field :dbname, class: "form-control" %>
    </div>

    <div class = "form-group">
      <%= label_tag "Load Data from Databases Directly"%>
      <%= select_tag  "LoadDataDb" ,  options_for_select( [["No","no"],["Yes","yes"]]),class: "LoadDataDb " %>
    <div>

    <div class = "form-group PasswordDb" style = "display: none;">
      <%= label_tag "Enter your database password"%>
      <%= password_field_tag(:password_of_db,nil , class: "db_password_new") %>
      <%#= password_field_tag  "PasswordDb" ,class: "PasswordDb",style: "display:none;" %>
    </div>

    <%= submit_tag("Create my project" , class: "btn btn-large btn-primary create_new_project") %>
    <% end %>
  </div>
</div>