<h1> Project Information </h1>
<div> 
	

	<ul class="nav nav-tabs">
    <li>
      <%= link_to("Project Information",  Project.find(params[:project_id].to_i)  , data: {toggle: ""} ) %>
    </li>

    <li class="active">
      <a data-toggle="tab" href="#coll">Collaborators</a>
    </li>
        
    <li>
      <%= link_to("Tables",  project_entities_path(Project.find(params[:project_id].to_i))  , data: {toggle: ""} ) %>
    </li>

    <%project=Project.find(params[:project_id].to_i)%>
    <% if current_user == project.user %>
      <div class="navbar-search pull-right">
        <%= form_tag(project_collaborations_path(Project.find(params[:project_id].to_i)), method: "post") do %>
          Email <%= text_field_tag(:email) %>
          <%= hidden_field_tag :pid, project.id %>
          <%= submit_tag("Add") %>
        <% end %>
      </div>
    <%end%>
  </ul>


  <div class="tab-content">

  	<div id="info" class="tab-pane fade"></div>

    <div id="coll" class="tab-pane fade in active">
      <h3>Collaborators</h3>
		  <div class = "row">
        <%@collaborators.each do%>
          <% |user| %>
          <div class="span8"><%= user.name %></div>
        <%end%>
		  </div>            
    </div>
      
    <div id="table" class="tab-pane fade"></div>

  </div>
	
</div>